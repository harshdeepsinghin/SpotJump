{
  "manifest_version": 3,
  "name": "SpotJump",
  "version": "1.0",
  "description": "Jump from YouTube to Spotify instantly",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Jump to Spotify"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "*://open.spotify.com/*"
      ],
      "js": [
        "spotify_content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}